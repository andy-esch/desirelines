# Example environment file for local development
# Copy this to .env and fill in your values

# GCP Configuration
GCP_PROJECT_ID=local-dev
GCP_BUCKET_NAME=desirelines_local_testing
GCP_PUBSUB_TOPIC=strava-webhooks

# BigQuery Configuration (for BQ inserter)
GCP_BIGQUERY_DATASET=local_testing

# Live Environment Overrides (optional - set these for live testing)
# GCP_PROJECT_ID_LIVE=your-live-project-id
# GCP_BUCKET_NAME_LIVE=your-live-bucket-name

# Firebase Configuration (for web frontend)
# These values are safe to expose in client-side code
# Security is enforced via Firestore Security Rules
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=local-dev

# API Gateway URL (for web frontend)
VITE_API_URL=http://localhost:8084
